{
  "name": "Android",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "codespace"
    }
  },
  "features": {
    "git-lfs": "latest",
    "github-cli": "latest"
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/bin/bash"
      }
    }
  },
  "postCreateCommand": "./gradlew",
  "remoteUser": "codespace"
}
